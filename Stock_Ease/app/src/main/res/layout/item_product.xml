    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/product_name"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="Product Name" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
